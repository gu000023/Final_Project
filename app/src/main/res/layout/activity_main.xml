<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:orientation="vertical"
    tools:context=".MainActivityfp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="26dp"
        android:text="Select any button to proceed"/>

    <Button
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="Guardian news search"
        tools:layout_editor_absoluteY="185dp"
        tools:layout_editor_absoluteX="84dp"
        tools:ignore="MissingConstraints"
        android:id="@+id/guardianBtn"/>
    <Button
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="NASA image ofthe day search"
        tools:layout_editor_absoluteY="260dp"
        tools:layout_editor_absoluteX="81dp"
        tools:ignore="MissingConstraints"
        android:id="@+id/nasaImgBtn"/>
    <Button
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="NASA earth imagery database"
        tools:layout_editor_absoluteY="330dp"
        tools:layout_editor_absoluteX="83dp"
        tools:ignore="MissingConstraints"
        android:id="@+id/nasaEarthBtn"/>
    <Button android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="BBC News reader"
        tools:layout_editor_absoluteY="398dp"
        tools:layout_editor_absoluteX="81dp"
        tools:ignore="MissingConstraints"
        android:id="@+id/bbcBtn"/>

</LinearLayout>